<table class="u-full-width">
  <thead>
    <tr>
      <th>Username</th>
      <th>State</th>
    </tr>
  </thead>
  <tbody>
    <%= for user <- @users do %>
      <tr>
        <td><%= user.username %></td>
        <%= if user.state == :ready do %>
          <td class="user-ready">Ready</td>
        <% else %>
          <td class="user-not-ready">Not ready</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
